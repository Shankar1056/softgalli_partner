<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="softgalli.partner">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/soft_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/soft_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".activity.SplasScreen"
            android:theme="@style/AppTheme.customtheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"  />
        <activity
            android:name=".activity.StuTeaMainActivity"
            android:theme="@style/AppTheme.NoActionBar"  />
        <activity
            android:name=".activity.AddTeacher"
            android:theme="@style/AppTheme.NoActionBar"  />
        <activity
            android:name=".activity.AddStudent"
            android:theme="@style/AppTheme.NoActionBar"  />

    </application>

</manifest>